    "count = 0\n",
    "t_score = 0\n",
    "\n",
    "while True:\n",
    "    score = int(input(\"点数を入力してください\"))\n",
    "\n",
    "    if score == -1:\n",
    "        break\n",
    "    count += 1\n",
    "\n",
    "    print(f\"点数を入力してください：{score}\")\n",
    "\n",
    "    \n",
    "    t_score += score\n",
    "    av_score = t_score / count\n",
    "\n",
    "print(f\"{count}人のテストの平均点は{round(av_score,1)}点です\")\n",
    "\n"
   ]
